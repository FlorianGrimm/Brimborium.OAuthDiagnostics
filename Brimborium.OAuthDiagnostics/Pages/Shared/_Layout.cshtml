<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brimborium.OAuthDiagnostics</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Brimborium.OAuthDiagnostics</a>
                <div class="navbar-links">
                    <a asp-area="" asp-page="/UI/Index">Home</a>
                    <a asp-area="" asp-page="/UI/Request/Index">Request</a>
                    <a asp-area="" asp-page="/UI/Response/Index">Response</a>
                </div>
            </div>
        </nav>
    </header>
        @RenderBody()

    <footer class="footer">
        <div>
            &copy; 2025 - Brimborium.OAuthDiagnostics - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
